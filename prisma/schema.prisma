model NotificationList {
  id             String               @id @default(uuid())
  listNumber     String               @unique // "XXX/YYYY"
  sequenceNumber Int // XXX
  year           Int // YYYY
  type           NotificationListType // Tipo da lista

  status NotificationListStatus @default(PENDENTE)

  items NotificationItem[]

  createdBy     String
  createdByUser User     @relation("NotificationListCreatedBy", fields: [createdBy], references: [id])
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@unique([sequenceNumber, year])
  @@index([status])
  @@index([year])
  @@map("CCR_NotificationList")
  @@schema("jurfis")
}

model NotificationItem {
  id     String           @id @default(uuid())
  listId String
  list   NotificationList @relation(fields: [listId], references: [id], onDelete: Cascade)

  resourceId String
  resource   Resource @relation(fields: [resourceId], references: [id])

  // Tentativas de envio
  attempts NotificationAttempt[]

  observations String? @db.Text

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([listId, resourceId])
  @@index([listId])
  @@index([resourceId])
  @@map("CCR_NotificationItem")
  @@schema("jurfis")
}

// Tentativa de notificação (cada envio com seu prazo e canal)
model NotificationAttempt {
  id     String           @id @default(uuid())
  itemId String
  item   NotificationItem @relation(fields: [itemId], references: [id], onDelete: Cascade)

  attemptNumber Int // 1, 2, 3...

  // Canal de notificação
  channel NotificationChannel

  // Informações do envio
  sentAt DateTime? // Quando foi enviada (null = ainda não enviada)

  // Destinatários (relacionamento N:N com Contact/Address)
  recipients NotificationAttemptRecipient[]

  // Prazo desta tentativa
  deadline DateTime?

  // Status desta tentativa
  status NotificationAttemptStatus @default(PENDENTE)

  // Ciência desta tentativa
  confirmedAt     DateTime?
  confirmedBy     String?
  confirmedByUser User?     @relation("NotificationAttemptConfirmedBy", fields: [confirmedBy], references: [id])

  observations String? @db.Text

  // Dados específicos para canal SETOR
  sectorId String?
  sector   Sector? @relation(fields: [sectorId], references: [id])

  // Dados específicos para canal EXTERNO (campo livre)
  externalDestination String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([itemId, attemptNumber])
  @@index([itemId])
  @@index([status])
  @@index([deadline])
  @@index([channel])
  @@map("CCR_NotificationAttempt")
  @@schema("jurfis")
}

// Relacionamento N:N entre Tentativa e Destinatário (Contact, Address ou Part)
model NotificationAttemptRecipient {
  id        String              @id @default(uuid())
  attemptId String
  attempt   NotificationAttempt @relation(fields: [attemptId], references: [id], onDelete: Cascade)

  // Destinatário pode ser um Contato (EMAIL/WHATSAPP), Endereço (CORREIOS) ou Parte (PESSOALMENTE)
  contactId String?
  contact   Contact? @relation(fields: [contactId], references: [id], onDelete: Restrict)
  addressId String?
  address   Address? @relation(fields: [addressId], references: [id], onDelete: Restrict)
  partId    String?
  part      Part?    @relation(fields: [partId], references: [id], onDelete: Restrict)

  // Valor do destinatário no momento do envio (snapshot)
  recipientValue String // Email, telefone, endereço formatado ou nome da parte

  createdAt DateTime @default(now())

  @@index([attemptId])
  @@index([contactId])
  @@index([addressId])
  @@index([partId])
  @@map("CCR_NotificationAttemptRecipient")
  @@schema("jurfis")
}

