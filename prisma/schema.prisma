// ============================================
// ENDEREÇOS
// ============================================
model Address {
  id            String   @id @default(uuid())
  resourceId    String
  resource      Resource @relation(fields: [resourceId], references: [id], onDelete: Cascade)

  type          AddressType
  cep           String?
  street        String   // Rua/Logradouro
